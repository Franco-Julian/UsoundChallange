<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivSound"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_audio_file_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvPatient"
        app:layout_constraintStart_toEndOf="@id/ivSound"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Type :" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintBottom_toTopOf="@+id/tvPatient"
        app:layout_constraintStart_toEndOf="@+id/textViewtype"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="type" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewpatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvLastUpdate"
        app:layout_constraintStart_toEndOf="@id/ivSound"
        app:layout_constraintTop_toBottomOf="@+id/tvType"
        android:text="Patient :" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintBottom_toTopOf="@+id/tvLastUpdate"
            app:layout_constraintStart_toEndOf="@id/textViewpatient"
            app:layout_constraintTop_toBottomOf="@+id/tvType"
            tools:text="patient" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewlast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivSound"
        app:layout_constraintStart_toEndOf="@id/ivSound"
        app:layout_constraintTop_toBottomOf="@+id/tvPatient"
        android:textStyle="bold"
        android:text="Last update :" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintBottom_toBottomOf="@id/ivSound"
            app:layout_constraintStart_toEndOf="@id/textViewlast"
            app:layout_constraintTop_toBottomOf="@+id/tvPatient"
            tools:text="last update" />

    </androidx.constraintlayout.widget.ConstraintLayout>
